<h2>User DETAILS</h2>

<div class="table-wrapper">
    <table class="fl-table">
        <thead>
            <tr>
                <th>User Name</th>
                <th>Password</th>
                <th>User Email</th>
      
                <th>Role</th>
                

                <th colspan="2">ACTION</th>

            </tr>
        </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                        <a asp-action="Edit" asp-route-id="@item.UserId"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>

                        <a asp-action="Delete" asp-route-id="@item.UserId"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
            </td>
        </tr>
}
    </tbody>
</table>

