    <br />
    <div style="margin-left: 270px;" class="container-form">
        <header> Edit Home Insurance</header>

        <form asp-action="Edit" style="height: 630px;">
            <input type="hidden" asp-for="Policynumber" />
            <div class="form first">
                <div class="details personal">
                    <span class="title">Details </span>

                    <div class="fields">
                        <div class="input-field">
                            <label asp-for="HolderName">Policy Holder Name</label>
                            <input asp-for="HolderName" type="text" placeholder="Enter policy holder name" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="CustomerAddress">Address</label>
                            <input asp-for="CustomerAddress" type="text" placeholder="Enter Address" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" type="text" placeholder="Enter your email" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="Contact">Mobile Number</label>
                            <input asp-for="Contact" type="number" placeholder="Enter mobile number" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="Gender">Gender</label>
                            <select asp-for="Gender" required>
                                <option disabled selected>Select gender</option>
                                <option>Male</option>
                                <option>Female</option>

                            </select>
                        </div>

                        <div class="input-field">
                            <label asp-for="Occupation">Occupation</label>
                            <input asp-for="Occupation" type="text" placeholder="Enter your ccupation" required>
                        </div>
                    </div>
                </div>

                <div class="details ID">


                    <div class="fields">

                        <div class="input-field">
                            <label asp-for="BankACC">Bank Account Number</label>
                            <input asp-for="BankACC" type="number" placeholder="Enter bank account number" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="CNICnumber">CNIC Number</label>
                            <input asp-for="CNICnumber" type="number" placeholder="Enter your cnic number" required>
                        </div>


                        <div class="input-field">
                            <label asp-for="HouseAddress">House Address</label>
                            <input asp-for="HouseAddress" type="text" placeholder="Enter house address" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="HouseMembers">House Members</label>
                            <input asp-for="HouseMembers" type="int" placeholder="Enter house members" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="HouseOwner">House Owner Name</label>
                            <input asp-for="HouseOwner" type="text" placeholder="Enter house owner name" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="PolicyValidity">Policy Validity</label>
                            <input asp-for="PolicyValidity" type="date" placeholder="Enter your expiry date" required>
                        </div>


                        <div class="input-field">
                            <label asp-for="Housetype">House Type</label>
                            <select asp-for="Housetype" required>
                                <option disabled selected>Select House type</option>
                                <option>Bungalow</option>
                                <option>Appartment</option>

                            </select>
                        </div>

                        <div class="input-field">
                            <label asp-for="Housesqyard">House SQYD</label>
                            <input asp-for="Housesqyard" type="text" placeholder="Enter house sqyd" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="Houseprice">House Price</label>
                            <input asp-for="Houseprice" type="number" placeholder="Enter your house price" required>
                        </div>

