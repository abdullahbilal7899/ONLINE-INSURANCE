                            <select asp-for="Package" required>
                                <option disabled selected>Select Package</option>
                                <option>Silver</option>
                                <option>Gold</option>
                                <option>Platanium</option>
                            </select>
                        </div>





                    </div>
                    <br />
                    <div class="form-group">
