<body style="background:#6376aa;">

    <br />
    <div style="margin-left: 270px;" class="container-form">
        <header>Health Insurance</header>

        <form asp-action="Create" style="height: 630px;">

            <div class="form first">
                <div class="details personal">
                    <span class="title">Details </span>

                    <div class="fields">
                        <div class="input-field">
                            <label asp-for="HolderName">Policy Holder Name</label>
                            <input asp-for="HolderName" type="text" placeholder="Enter policy holder name" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="DOB">Date of Birth</label>
                            <input asp-for="DOB" type="date" placeholder="Enter birth date" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" type="text" placeholder="Enter your email" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="Contact">Mobile Number</label>
                            <input asp-for="Contact" type="number" placeholder="Enter mobile number" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="Gender">Gender</label>
                            <select asp-for="Gender" required>
                                <option disabled selected>Select gender</option>
                                <option>Male</option>
                                <option>Female</option>

                            </select>
                        </div>

                        <div class="input-field">
                            <label asp-for="Occupation">Occupation</label>
                            <input asp-for="Occupation" type="text" placeholder="Enter your ccupation" required>
                        </div>
                    </div>
                </div>

                <div class="details ID">


                    <div class="fields">
                        <div class="input-field">
                            <label  asp-for="CustomerAddress">Address</label>
                                <input asp-for="CustomerAddress" type="text" placeholder="Enter Address" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="BankACC">Bank Account Number</label>
                            <input asp-for="BankACC" type="number" placeholder="Enter bank account number" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="CNICnumber">CNIC Number</label>
                            <input asp-for="CNICnumber" type="number" placeholder="Enter your cnic number" required>
                        </div>


                        <div class="input-field">
                            <label asp-for="FatherName">Father Name</label>
                            <input asp-for="FatherName" type="text" placeholder="Enter holder father name" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="MotherName">Mother Name</label>
                            <input asp-for="MotherName" type="text" placeholder="Enter holder mother name" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="PolicyStart">Insurance Issued Date</label>
                            <input asp-for="PolicyStart" type="date" id="todayDate" placeholder="Enter your issued date" required >
                        </div>

                        <div class="input-field">
                            <labe asp-for="PolicyValidity">Policy Validity</labe>
                            <input asp-for="PolicyValidity" type="date" id="todayDate" placeholder="Enter your validity" required>
                        </div>

                        <div class="input-field">
                            <label asp-for="MartialStatus">Martial Status</label>
                            <select asp-for ="MartialStatus" required>
                                <option disabled selected>Select Martial Status</option>
                                <option>Single</option>
                                <option>Married</option>

                            </select>
                        </div>

                        <div  class="input-field">
                            <label asp-for="Package">Packages</label>
                            <select asp-for="Package" required>
                                <option disabled selected>Select Package</option>
                                <option>Silver</option>
                                <option>Gold</option>
                                <option>Platanium</option>
                            </select>
                        </div>





                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </div>
            </div>



        </form>
    </div>
    <script>

        document.getElementById("todayDate").valueAsDate = new Date();
    </script>
 

</body>